---
import Layout from "../layouts/Layout.astro";
import PlantShop from "../components/PlantShop.tsx";
import { plantsData } from "../data";
---

<Layout title="Our Shop - Plants.">
  <h3
    class="md:px-4 py-2 font-extrabold font-Quicksand_B text-base text-center"
  >
    OUR SHOP
  </h3>
  <div class="plants-container">
    {
      plantsData.map((plant) => (
        <PlantShop img={plant.img} title={plant.title} price={plant.price} />
      ))
    }
  </div>
</Layout>
<style>
  .plants-container {
    @media (min-width: 760px) {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: 1fr 1fr;
      margin-bottom: 1rem;
    }
    display: block;
    margin-bottom: 1rem;
  }
</style>
